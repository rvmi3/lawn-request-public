<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("includes/head") %>
  </head>
  <body>
    <%- include("includes/header") %> <% if (inputData.hasError) { %>
    <div class="alert alert-danger"><%= inputData.message %></div>
    <% } %>
    <div class="container d-flex justify-content-center" style="height: 75vh">
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <form action="/password-reset-request" method="post">
              <%- include('includes/token') %>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" value="<%= inputData.email %>" required />
              </div>
              <button type="submit" class="btn" style="background-color: #68a357; color: white">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
