<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('includes/head') %>
  </head>
  <body>
    <%- include('includes/header') %>
    <h2 class="mx-auto w-25 text-center mb-4">Saved Landscapers</h2>
    <%if(landscapers.length === 0 ){%>
    <li class="list-group-item w-25 mx-auto text-center" id="none-found">No Landscapers Saved</li>
    <%}%> <%for(const ls of landscapers){%>

    <div class="list-group-item border w-25 mx-auto mb-1" id="landscaper-card" style="border-radius: 10px">
      <div class="d-flex align-items-center justify-content-between">
        <div class="d-flex align-items-center">
          <div style="border-radius: 50%; overflow: hidden; width: 50px; height: 50px; box-shadow: 0 0 5px #125200b9">
            <img src="../<%=ls.profile%>" alt="" class="img-fluid" id="image-container" /><%if(!ls.profile){%><img
              src="../images/profile.jpg"
              alt=""
              class="img-fluid"
              id="image-container"
              style="transform: scale(0.5)"
            /><%}%>
          </div>
          <h4 class="ml-2"><%=ls.name%></h4>
        </div>

        <div class="d-flex">
          <a href="/request/<%=ls._id%>" class="btn btn-success btn-sm mr-1">Request</a>
          <form action="/remove/<%=ls._id%>" method="post">
            <%-include('includes/token')%>
            <button class="btn btn-danger btn-sm">Remove</button>
          </form>
        </div>
      </div>
    </div>
    <%}%> <%- include('includes/footer') %>
  </body>
</html>
