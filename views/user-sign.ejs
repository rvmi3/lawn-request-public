<!DOCTYPE html>
<html lang="en">
  <head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <%- include("includes/head") %>
  </head>
  <body>
    <%- include("includes/header") %>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <% if (newUser) { %> <% if (inputData.hasError) { %>
              <div class="alert alert-danger"><%= inputData.message %></div>
              <% } %>
              <form action="/signup" method="POST">
                <%- include('includes/token') %>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" name="email" value="<%= inputData.email %>" required />
                </div>
                <div class="form-group">
                  <label for="first">First Name</label>
                  <input type="text" class="form-control" name="firstName" value="<%= inputData.first %>" required />
                </div>
                <div class="form-group">
                  <label for="last">Last Name</label>
                  <input type="text" class="form-control" name="lastName" value="<%= inputData.last %>" required />
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" name="password" required />
                </div>
                <div class="form-group">
                  <label for="confPassword">Confirm Password</label>
                  <input type="password" class="form-control" name="confPassword" required />
                </div>
                <button type="submit" class="btn" style="background-color: #68a357; color: white">Sign Up</button>
              </form>
              <% } else { %> <% if (inputData.hasError) { %>
              <div class="alert alert-danger"><%= inputData.message %></div>
              <% } %>
              <form action="/login" method="POST">
                <%- include('includes/token') %>
                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="text" class="form-control" name="email" value="<%= inputData.email %>" required />
                </div>
                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" name="password" required />
                </div>
                <button type="submit" class="btn" style="background-color: #68a357; color: white">Log In</button>
                <button class="btn btn-link"><a href="/forgot-password" style="color: #125200">Forgot Password</a></button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
